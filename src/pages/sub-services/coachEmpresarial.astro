---
export let CisVisible = false;
---

<section class={`modal-overlay ${CisVisible ? "block" : "hidden"}`}>
  <section class="section-coach">
    <header>
      <h1>Coach empresarial</h1>
      <button class="close" id="close-modal-2">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 256 256"
          ><path
            fill="currentColor"
            d="M128 24a104 104 0 1 0 104 104A104.11 104.11 0 0 0 128 24m37.66 130.34a8 8 0 0 1-11.32 11.32L128 139.31l-26.34 26.35a8 8 0 0 1-11.32-11.32L116.69 128l-26.35-26.34a8 8 0 0 1 11.32-11.32L128 116.69l26.34-26.35a8 8 0 0 1 11.32 11.32L139.31 128Z"
          ></path></svg
        >
      </button>
    </header>
    <main class="content">
      
    </main>
  </section>
</section>

<style>
  .section-coach {
    font-family: "Gill Sans", "Gill Sans MT", Calibri, "Trebuchet MS",
      sans-serif;
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    margin: auto;
    position: relative;
    border-radius: 15px;
    padding: 10px;
    max-width: 90%;
    max-height: 90%;
    overflow-y: auto;
    box-sizing: border-box;
  }

  .content {
    display: grid;
    gap: 15px;
    grid-template-columns: repeat(4, 1fr);
    grid-template-rows: auto;
  }

  .modal-overlay-C {
    padding: 20px;
    position: fixed;
    z-index: 500;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: white;
    display: none;
    justify-content: center;
    align-items: center;
    overflow-y: auto;
    padding: 1rem;
  }

  .modal-overlay-C.block {
    display: flex;
  }

  h1 {
    margin-left: 10px;
    color: #060270;
  }

  header {
    display: flex;
    margin-bottom: 15px;
    align-items: center;
    position: relative;
    width: 100%;
    height: 60px;
    background: rgba(62, 122, 154, 0.1);
    border-radius: 10px;
    padding: 10px;
  }

  .close {
    position: absolute;
    margin-right: 20px;
    right: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: transparent;
    border-radius: 5px;
    background: #060270;
    color: white;
    border: none;
    width: 40px;
    height: 40px;
    cursor: pointer;
  }

  .close:hover {
    background: #ff0d0d;
    color: white;
    border: 1px solid white;
  }

  @media (width < 1000px) {
    .section-coach {
      width: 80%;
    }

    .content {
      grid-template-columns: repeat(2, 1fr);
      grid-template-rows: auto;
    }

    .modal-overlay-C {
      top: 25px;
    }
  }

  @media (width < 700px) {
    .content {
      grid-template-columns: 1fr;
      grid-template-rows: auto;
    }
  }
</style>
