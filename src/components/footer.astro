<style>
  .footer {
    background: linear-gradient(to right, #4276aa, #6ba2d9);
    width: 100%;
    color: white;
    bottom: 0;
    padding: 3rem 0 1rem 0;
    margin-top: 4rem;
    height: 45vh;
  }

  .footer-content {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
    display: flex;
    flex-wrap: wrap;
    gap: 2rem;
    justify-content: space-between;
    align-items: flex-start;
  }

  .footer-sections {
    flex: 1 1 auto;
    display: flex;
    flex-wrap: wrap;
    gap: 4rem;
    justify-content: space-around;
  }

  .contact-info,
  .business-info {
    flex: 1 1 250px;
    font-size: 20px;
  }

  .contact-info h3,
  .business-info h3 {
    color: #024973;
    margin-bottom: 1rem;
    font-size: 2rem;
  }

  .contact-info p,
  .business-info p {
    margin: 0.5rem 0;
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .contact-info a {
    color: white;
    text-decoration: none;
    transition: color 0.3s ease;
  }

  .contact-info a:hover {
    color: #00a3ff;
  }

  .footer-bottom {
    text-align: center;
    padding-top: 2rem;
    margin-top: 2rem;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
  }

  .footer-bottom p {
    font-size: 0.875rem;
    color: rgba(255, 255, 255, 0.7);
  }

  @media (max-width: 768px) {
    .footer-content {
      flex-direction: column;
      align-items: center;
      text-align: center;
    }

    .footer-sections {
      gap: 2rem;
    }

    .contact-info p {
      justify-content: center;
    }
  }

  @media (width < 600px) {
    .footer-content {
      text-align: center;
    }

    .contact-info,
    .business-info {
      font-size: 12px;
      text-align: center;
    }

    .contact-info h3,
    .business-info h3 {
      margin-bottom: 1rem;
      font-size: 1rem;
    }
  }
</style>
